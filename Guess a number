#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
#include<time.h>

void menu()
{
	printf("************************\n");
	printf("************************\n");
	printf("********1.play**********\n");
	printf("********0.quit**********\n");
	printf("************************\n");
	printf("************************\n");
}
 void game()
{
	
	int num = rand() % 100 +1;
	int guess = 0;
	
	printf("Please enter a number:> ");

	while (1)
	{
		scanf("%d", &guess);
		if (guess < num)
		{
			printf("A bit small\n");
		}
		else if (guess > num)
		{
			printf("A bit large\n");
		}
		else if (guess == num)
		{
			printf("Guess right!!\n\n\n");
			Sleep(2000);
			system("cls");
			break;
			
		}
	}
}


int main()
{
	int input = 0;
	srand((unsigned int)time(NULL));
	do
	{
		printf("push '1' to start\npush '0' to quit\n");
		menu();
		scanf("%d", &input);
		
		switch (input)
		{
		case 1:
			printf("Guess a number between 1--100\n");
			game();

		case 0:
			break;
		}
	} while (input);


	return 0;
